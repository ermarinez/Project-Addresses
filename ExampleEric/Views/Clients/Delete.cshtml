@model ExampleEric.Models.Client

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h1>Eliminar Cliente</h1>

@if (Model.Addresses != null && Model.Addresses.Any())
{
    <h3>¿Está seguro de que desea eliminar este cliente y todas sus direcciones asociadas?</h3>
}
else
{
    <h3>¿Está seguro de que desea eliminar este cliente?</h3>
}
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
        <dt class="col-sm-2">Años</dt>
        <dd class="col-sm-10">@Model.Years</dd>
        <dt class="col-sm-2">Direcciones Asociadas</dt>
        <dd class="col-sm-10">@Model.Addresses.Count()</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </form>
</div>


<style>
    /* Estilos generales */
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa; /* Color de fondo suave */
        color: #333;
        margin: 0;
        padding: 20px;
    }

    h1 {
        font-size: 2.5em;
        color: #dc3545; /* Color rojo para eliminar */
        margin-bottom: 20px;
    }

    h3 {
        font-size: 1.8em;
        margin-bottom: 20px;
        color: #dc3545; /* Color rojo */
    }

    h4 {
        font-size: 1.5em;
        margin-bottom: 10px;
        color: #c82333; /* Color rojo oscuro */
    }

    hr {
        border: 0;
        height: 2px;
        background: #dc3545; /* Línea horizontal roja */
        margin-bottom: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-danger:hover {
            background-color: #c82333; /* Color más oscuro al pasar el mouse */
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        margin-left: 10px; /* Espaciado entre botones */
        text-decoration: none;
        transition: background-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Color más oscuro al pasar el mouse */
        }
</style>

